    <!-- Drug operations -->

    <operations>
      <operation>
        <parameter>CL</parameter>
        <formula><![CDATA[

theta_1 = 14.6;
theta_2 = 0.62;
theta_3 = -0.34;
CCR = covariate_clcr;
AGE = covariate_age;

TVCL = theta_1 * Math.pow((CCR / 83),theta_2)* Math.pow((AGE / 35),theta_3);
return TVCL;
        ]]></formula>
				<comments>
				  <comment lang="en"> Found in table II</comment>
				  <comment lang="fr"> Trouvée en table II</comment>
				</comments>
      </operation>
      <operation>
        <parameter>V1</parameter>
