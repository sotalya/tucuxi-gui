	<descs>
        <desc lang="en">Antibiotic used in treatment against Gram-positive organisms</desc>
        <desc lang="fr">Antibiotique contre les organismes Gram-positifs</desc>
      </descs>
      <brands>
        <brand>Daptomycin</brand>
      </brands>
      <comments/>
    </head>

    <!-- Drug adme and intake -->

    <adme>
      <intake>infu</intake>
      <distribution>1</distribution>
      <elimination>linear</elimination>
      <comments>
          <comment lang="en">Infused treatment in linear one compartiment model</comment>
          <comment lang="fr">Traitement par infusion sur un modele lineaire a un compartiment</comment>
        </comments>
    </adme>

    <!-- Drug units and conversions -->

    <halflife>
      <unit>h</unit>
      <value>12</value>
      <multiplier>10</multiplier>
      <comments/>
    </halflife>

    <conversions>
      <units>
        <concentration>ug/l</concentration>
        <result>ug/l</result>
      </units>
      <factors>
        <concentration>0</concentration>
        <result>0</result>
      </factors>
      <molarmass>0</molarmass>
      <comments/>
    </conversions>

    <!-- Drug dosages -->

    <dosages>
      <doses default="500" unit="mg" any="false">
        <dose>200</dose>
        <dose>350</dose>
        <dose>500</dose>
	      <dose>600</dose>
        <dose>700</dose>
        <dose>800</dose>
	      <dose>900</dose>
        <dose>1000</dose>
        <dose>1100</dose>
        <dose>1200</dose>
	      <dose>1350</dose>
	</doses>
      <intervals default="24" unit="h" any="false">
        <interval>24</interval>
        <interval>36</interval>
        <interval>48</interval>
      </intervals>
      <infusions default="30" unit="min" any="false">
        <infusion>6</infusion>
        <infusion>30</infusion>
      </infusions>
      <comments/>
    </dosages>

    <!-- Drug targets -->

    <targets>
      <target>
        <type>peak</type>
        <concentrations unit="mg/l">
          <min>
            <value>40</value>
            <formula/>
          </min>
          <max>
            <value>100</value>
            <formula/>
          </max>
          <best>
            <value>60</value>
            <formula/>
          </best>
        </concentrations>
        <times unit="h">
          <min>
            <value>0.5</value>
            <formula/>
          </min>
          <max>
            <value>1.5</value>
            <formula/>
          </max>
          <best>
            <value>1</value>
            <formula/>
          </best>
        </times>
        <comments/>
      </target>
      <target>
        <type>residual</type>
        <concentrations unit="mg/l">
          <min>
            <value>5</value>
            <formula/>
          </min>
          <max>
            <value>25</value>
            <formula/>
          </max>
          <best>
            <value>15</value>
            <formula/>
          </best>
        </concentrations>
        <comments>
          <comment lang="fr">Cmin should be less than 25 mg/L to avoid muscular toxicity according to Bhavnani et al.CID 2010</comment>
        </comments>
      </target>
    </targets>

    <!-- Drug covariates -->

    <covariates>
      <covariate>
        <id>CLcr</id>
        <names>
          <name lang="en">CLcr</name>
          <name lang="fr">CLcr</name>
        </names>
        <descs>
          <desc lang="en">Creatinine clearance</desc>
          <desc lang="fr">Clairance de la creatinine</desc>
        </descs>
        <unit>mL/min</unit> <!-- ml for a minute -->
        <type>double</type>
        <defaultvalue>80</defaultvalue>
        <comments></comments>
        </covariate>
    </covariates>

    <!-- Drug error model -->

    <errormodel>
      <additive>1.422</additive>
      <proportional>0.3628</proportional>
      <comments>
            <comment lang="en">Proportional taken as percent CV</comment>
         </comments>
    </errormodel>

    <!-- Drug parameters -->

    <parameters>
      <parameter>
        <id>CL</id>
        <unit>l/h</unit>
        <value>0.8016</value>
        <bsv>
          <additive>0</additive>
          <proportional>0.2074</proportional>
        </bsv>
        <min>0.0001</min>
        <max>100000</max>
        <step>1</step>
        <comments></comments>
      </parameter>
      <parameter>
        <id>V</id>
        <unit>l</unit>
        <value>12.29</value> <!-- constante -->
        <bsv>
          <additive>0.0</additive>
          <proportional>0.0</proportional>
        </bsv>
        <min>0.0001</min>
        <max>100000</max>
        <step>5</step>
        <comments>
         </comments>
      </parameter>
    </parameters>

    <!-- Drug correlations -->

    <correlations>
    </correlations>

    <!-- Drug operations -->

    <operations>
<operation>
        <parameter>CL</parameter>
        <formula><![CDATA[
theta1=parameter_CL;
theta3=0.2026;

TVCL = theta1 * Math.pow(covariate_CLcr/80, theta3);
return TVCL;
        ]]></formula>
        <comments/>
      </operation>
    </operations>

    <!-- Drug general comments -->

    <comments>
        </comments>

  </drug>
</model>
