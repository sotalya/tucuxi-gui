    <!-- Drug operations -->

    <operations>
      <operation>
        <parameter>CL</parameter>
        <formula><![CDATA[
theta1=parameter_CL;
theta4=5.42;
theta5=1.49;
theta6=-5.81;
theta7=-.806;

MEANBW=70;
FBW=(covariate_bodyweight-MEANBW)/MEANBW;

MEANAG=50;
FAGE=(covariate_age-MEANAG)/MEANAG;

if (covariate_gist)
  PATH=1;
else
  PATH=0;

PATH = covariate_gist;

MALE = covariate_sex;

TVCL = theta1+theta4*FBW+theta5*MALE-theta5*(1-MALE)+theta6*FAGE + theta7*PATH-theta7*(1-PATH);
return TVCL;
        ]]></formula>
        <comments/>
      </operation>
      <operation>
        <parameter>V</parameter>
        <formula><![CDATA[
theta2=parameter_V;
theta8=46.2;
tvv = theta2+theta8*covariate_sex-theta8*(1-covariate_sex);
return tvv;
        ]]></formula>
        <comments/>
      </operation>
    </operations>

